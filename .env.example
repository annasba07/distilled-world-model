# Lightweight World Model - Environment Configuration Template
# Copy this file to .env and adjust values for your environment

# =============================================================================
# PATHS
# =============================================================================
# Directory for model checkpoints
# LWM_CHECKPOINTS_DIR=./checkpoints

# Specific world model checkpoint to use
# LWM_WORLD_MODEL_CKPT=./checkpoints/world_model_final.pt


# =============================================================================
# DEVICE & INFERENCE
# =============================================================================
# Device to use: 'cuda' or 'cpu'
LWM_DEVICE=cuda

# Enable TensorRT optimization (requires CUDA)
LWM_TENSORRT=true

# Enable FP16 mixed precision (requires CUDA)
LWM_FP16=true

# Batch size for inference
LWM_BATCH_SIZE=4


# =============================================================================
# MEMORY MANAGEMENT
# =============================================================================
# Maximum GPU memory to use in GB (auto-detected by default)
# LWM_MAX_GPU_MEMORY_GB=3.5

# Maximum number of concurrent sessions
LWM_MAX_SESSIONS=100

# Session time-to-live in seconds (1 hour default)
LWM_SESSION_TTL_SECONDS=3600

# Memory check interval in seconds
LWM_MEMORY_CHECK_INTERVAL=30


# =============================================================================
# API SERVER
# =============================================================================
# Host address to bind to
LWM_HOST=0.0.0.0

# Port to listen on
LWM_PORT=8000

# Rate limiting: requests per window
LWM_RATE_LIMIT_REQUESTS=100

# Rate limiting: window size in seconds
LWM_RATE_LIMIT_WINDOW=60
